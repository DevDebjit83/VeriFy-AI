# Environment Configuration
ENVIRONMENT=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1
CORS_ORIGINS=https://verify-ai.com,https://app.verify-ai.com

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://verify_user:secure_password@postgres:5432/verify_ai_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Cache
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50
CACHE_TTL_SECONDS=3600

# Google Cloud
GCP_PROJECT_ID=verify-ai-production
GCP_REGION=us-central1
GCS_BUCKET=verify-ai-media-uploads
PUBSUB_VIDEO_TOPIC=video-processing
PUBSUB_VIDEO_SUBSCRIPTION=video-processing-sub

# AI APIs
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash
TAVILY_API_KEY=your-tavily-api-key-here

# Model Endpoints (Internal Service URLs)
MODEL_TEXT_LIAR_URL=http://text-liar-service:8001
MODEL_TEXT_BRAIN2_URL=http://text-brain2-service:8002
MODEL_IMAGE_URL=http://image-detector-service:8003
MODEL_VIDEO_URL=http://video-detector-service:8004
MODEL_VOICE_URL=http://voice-detector-service:8005

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# File Upload Limits
MAX_TEXT_LENGTH=50000
MAX_IMAGE_SIZE_MB=10
MAX_VIDEO_SIZE_MB=100
MAX_AUDIO_SIZE_MB=20

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
LOG_LEVEL=INFO

# Translation
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,bn,ta,te,mr,gu,kn,ml,pa,or,as

# Trending Configuration
TRENDING_TIME_WINDOW_HOURS=24
TRENDING_MIN_REPORTS=5
TRENDING_UPDATE_INTERVAL_MINUTES=15

# Worker Configuration
VIDEO_WORKER_CONCURRENCY=4
VIDEO_WORKER_TIMEOUT_SECONDS=600
VIDEO_WORKER_RETRY_ATTEMPTS=3

# Feature Flags
ENABLE_CROWDSOURCED_REPORTS=true
ENABLE_GEOGRAPHIC_TRENDING=true
ENABLE_REAL_TIME_SEARCH=true
ENABLE_EXPLANATION_GENERATION=true
